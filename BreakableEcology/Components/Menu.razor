<nav class="menu">
    <ul class="menu__items">
        <li class="menu__dropdown">
            <DropDown DropdownLinkClick="MenuLinkClick" />
        </li>
        @foreach (LinkModel link in AppData.MenuLinks)
        {
            <li class="menu__item" tabindex="0">
                <NavLink class="menu__link" href="@link.Url" @onclick="MenuLinkClick">@link.Text</NavLink>
            </li>
        }
    </ul>
</nav>

@code{
    [Parameter]
    public EventCallback MenuLinkClick { get; set; }
}